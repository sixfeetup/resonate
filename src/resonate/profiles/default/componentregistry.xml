<componentregistry>
  <utilities>
    <!--
        BBB Disabled in favor of "real time" notifications instead of digests.
        Kept in place in case we want to enable it later. -->
    <utility interface="resonate.interfaces.ISyndicationNotificationTool" object="portal_syn_notification" />
    <utility interface="p4a.subtyper.interfaces.IFolderishContentTypeDescriptor"
             name="resonate.event"
             factory="resonate.descriptors.EventDescriptor" />
    <utility interface="p4a.subtyper.interfaces.IFolderishContentTypeDescriptor"
             name="resonate.news"
             factory="resonate.descriptors.NewsDescriptor" />
    <utility interface="p4a.subtyper.interfaces.IFolderishContentTypeDescriptor"
             name="resonate.file"
             factory="resonate.descriptors.FileTargetDescriptor" />
  </utilities>
  <adapters>
    <adapter
      factory="resonate.content.news_item.NewsItemCurrentSyndicationTargetsModifier"
      provides="archetypes.schemaextender.interfaces.ISchemaModifier"
      for="Products.ATContentTypes.interfaces.IATNewsItem"
      name="news_item_cst"
      />
    <adapter
      factory="resonate.content.news_item.NewsItemRejectedSyndicationSitesModifier"
      provides="archetypes.schemaextender.interfaces.ISchemaModifier"
      for="Products.ATContentTypes.interfaces.IATNewsItem"
      name="news_item_rss"
      />
    <adapter
      factory="resonate.content.event.EventCurrentSyndicationTargetsModifier"
      provides="archetypes.schemaextender.interfaces.ISchemaModifier"
      for="Products.ATContentTypes.interfaces.IATEvent"
      name="event_cst"
      />
    <adapter
      factory="resonate.content.event.EventRejectedSyndicationSitesModifier"
      provides="archetypes.schemaextender.interfaces.ISchemaModifier"
      for="Products.ATContentTypes.interfaces.IATEvent"
      name="event_rss"
      />
    <adapter
      factory="resonate.content.file.FileCurrentSyndicationTargetsModifier"
      provides="archetypes.schemaextender.interfaces.ISchemaModifier"
      for="Products.ATContentTypes.interfaces.IATFile"
      name="file_cst"
      />
    <adapter
      factory="resonate.content.file.FileRejectedSyndicationSitesModifier"
      provides="archetypes.schemaextender.interfaces.ISchemaModifier"
      for="Products.ATContentTypes.interfaces.IATFile"
      name="file_rss"
      />
  </adapters>
</componentregistry>
